NAME = push_swap

CC = cc

CFLAGS = -Wall -Wextra -Werror

SRC = push_swap.c \
	  split.c \
      push.c \
      reverse_rotate.c \
      rotate.c \
      stack_init.c \
      swap.c \
      utils.c \
	  algo.c 

OBJS = $(SRC:.c=.o)

HEADER = push_swap.h

all: $(NAME)

$(NAME): $(OBJS) $(HEADER)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
